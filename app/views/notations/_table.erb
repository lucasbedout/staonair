<div class="row pull-left form-inline">
  <label for="filter">Filter notations </label>
  <input type="number" class="form-control" id="filter" placeholder="Filter by ID Booster"/>
</div>

<table id="notations-table" class="table table-striped">
  <thead>
  <tr>
    <th>Student</th>
    <th>Mark</th>
    <th>Appreciation</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @notations.each do |notation| %>
      <tr>
        <td class="idbooster"><%= notation.student %></td>
        <td><%= "%g" % notation.mark %></td>
        <td><%= notation.appreciation %></td>
        <td><%= link_to 'Show', notation %></td>
        <td><%= link_to 'Edit', edit_notation_path(notation) %></td>
        <td><%= link_to 'Delete', notation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>
